<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.PasswordField?>
<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ufc.br.controller.NewUserController">
    <children>
        <SplitPane focusTraversable="true" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <items>
                <AnchorPane>
                    <children>
                        <Label alignment="CENTER" layoutX="278.0" layoutY="34.0" style="&#10;" text="CADASTRO USUARIO"
                               textAlignment="CENTER" wrapText="false">
                            <font>
                                <Font name="System Bold" size="31.0" fx:id="x1"/>
                            </font>
                        </Label>
                        <Button defaultButton="true"
                                layoutX="358.0" layoutY="274.0"
                                mnemonicParsing="false"
                                prefHeight="59.0" prefWidth="157.0"
                                text="CADASTRAR" textAlignment="CENTER"
                                onAction = "#autenticarCadastro"/>
                        <TextField fx:id="nome"
                                   alignment="CENTER"
                                   layoutX="291.0"
                                   layoutY="104.0"
                                   prefHeight="26.0"
                                   prefWidth="316.0"
                                   promptText="NOME"/>

                        <TextField fx:id="login"
                                   alignment="CENTER"
                                   layoutX="291.0"
                                   layoutY="143.0"
                                   prefHeight="26.0"
                                   prefWidth="316.0"
                                   promptText="LOGIN"/>

                        <PasswordField fx:id="senha"
                                       alignment="CENTER"
                                       layoutX="291.0"
                                       layoutY="181.0"
                                       prefHeight="26.0"
                                       prefWidth="316.0"
                                       promptText="SENHA"/>

                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</VBox>
